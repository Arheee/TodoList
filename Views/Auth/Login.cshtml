@model TodoList.Models.UserModel

@{
	Layout = null;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
   <h1 class="text-center text-primary mb-4">Connexion</h1>
 
            @if (!string.IsNullOrEmpty(ViewBag.Message as string))
            {
                <div class="alert alert-danger text-center">
                    @ViewBag.Message
                </div>
            }
            <form asp-action="Login" method="post" class="border p-4 shadow-sm bg-light rounded">
                <div class="mb-3">
                    <label asp-for="Username" class="form-label">Nom d'utilisateur</label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Mot de passe</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Se connecter</button>
            </form>
        </div>
    </div>
</div>

