@model List<TodoList.Models.TodoItemModel>


<div class="container mt-5">
    <h1 class="text-center">La Liste de chose à faire 💗</h1>
    <a asp-action="Form" class="btn btn-success mb-3">Ajouter une tâche</a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var todo in Model)
            {
                <tr>
                    <td>@todo.Title</td>
                    <td>
                        @if (todo.IsCompleted)
                        {
                            <span class="text-success">Terminée</span>
                        }
                        else
                        {
                            <span class="text-warning">En cours</span>
                        }
                    </td>
                    <td>
                        <a asp-action="ToggleComplete" asp-route-id="@todo.Id" class="btn btn-info btn-sm">Changer statut</a>
                        <a asp-action="Delete" asp-route-id="@todo.Id" class="btn btn-danger btn-sm">Supprimer</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>